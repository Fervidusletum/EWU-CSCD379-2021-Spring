@model GroupViewModel

<form asp-controller="Groups" asp-action="Create" method="post">
    @await Html.PartialAsync("_CreateOrEdit")

    <div class="font-semibold" asp-validation-summary='All'></div>
    <div class="flex flex-row space-x-4 pt-2">
        <button class="btn">Create</button>
        <a class="btn" asp-controller="Groups" asp-action="Index">Cancel</a>
    </div>
</form>