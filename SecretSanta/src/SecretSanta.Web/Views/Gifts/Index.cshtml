@model List<GiftViewModel>

@{ViewBag.Title = "Gifts";}
@{int index = 0;}

<section class="itemlayout">
    @foreach (var giftViewModel in Model.OrderBy(gift => gift.Priority))
    {
        index = MockData.Gifts.FindIndex(gift => gift.Id == giftViewModel.Id);
    <section class="itembox flex flex-col pl-3">
        <div class="flex flex-row justify-between py-1">
            <a class="flex flex-col" asp-action="Edit" asp-route-id=@index>
                <div class="py-1">@giftViewModel.Title </div>
                <div class="py-1">@giftViewModel.Description</div>
            </a>
            <form asp-action="Delete" asp-route-id=@index method="post">
                <button onclick="return confirm('Do you want to remove @giftViewModel.Title?');"><i class="iconremove fas fa-times"></i></button>
            </form>
        </div>
        <a class="no-underline hover:underline" href="@giftViewModel.Url" target="_blank" rel="noopener noreferrer">@giftViewModel.Url</a>
    </section>
    }
</section>
<a class="m-2" asp-action="Create"><i class="iconadd text-3xl far fa-plus-square"></i></a>
